{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "declaration": true,
        "outDir": "lib",
        "strict": true,
        "incremental": false,
        "rootDir": "src",
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "traceResolution": false,
        "listEmittedFiles": false,
        "listFiles": false,
        "pretty": true,
        "lib": [
            "es2017"
        ],
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**",
        "**/*.spec.ts"
    ],
    "compileOnSave": false
}